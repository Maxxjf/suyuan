<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
          package="com.qcloud.suyuan">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.SYSTEM_ALERT_WINDOW" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.CHANGE_NETWORK_STATE" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE" />
    <uses-permission android:name="android.permission.READ_PHONE_STATE" />
    <uses-permission android:name="android.permission.VIBRATE" />
    <uses-permission android:name="android.permission.WAKE_LOCK" />
    <uses-permission android:name="android.permission.CALL_PHONE" />
    <uses-permission android:name="android.permission.KILL_BACKGROUND_PROCESSES"/>

    <application
        android:name=".base.BaseApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">

        <activity android:name=".ui.main.widget.LaunchActivity"
            android:screenOrientation="landscape"
            android:label="@string/app_name"
            android:launchMode="singleTask">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>

                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>

        <activity android:name=".ui.main.widget.MainActivity"
            android:launchMode="singleTop"
            android:screenOrientation="landscape"
            android:label="@string/title_suyuan"/>

        <activity android:name=".ui.main.widget.LoginActivity"
            android:screenOrientation="landscape"
            android:label="@string/title_login"/>
        <activity android:name=".ui.shop.widget.CartActivity"
            android:screenOrientation="landscape"
            android:label="@string/title_cart"/>
        <activity android:name=".ui.goods.widget.SellersActivity"
            android:screenOrientation="landscape"
            android:label="@string/title_sellers"/>
        <activity android:name=".ui.goods.widget.PurchaseActivity"
            android:screenOrientation="landscape"
            android:label="@string/title_purchase"/>
        <activity android:name=".ui.goods.widget.ModifyPriceActivity"
            android:screenOrientation="landscape"
            android:label="@string/title_modify_price"/>
        <activity android:name=".ui.order.widget.SellingWaterActivity"
            android:screenOrientation="landscape"
            android:label="@string/title_selling_water"/>
        <activity android:name=".ui.record.widget.CreditRecordActivity"
            android:screenOrientation="landscape"
            android:label="@string/title_credit_record"/>
        <activity android:name=".ui.record.widget.ReturnRecordActivity"
            android:screenOrientation="landscape"
            android:label="@string/title_return_record"/>
        <activity android:name=".ui.storage.widget.OutStorageActivity"
            android:screenOrientation="landscape"
            android:label="@string/title_out_storage"/>
        <activity android:name=".ui.store.widget.StoreProductActivity"
            android:screenOrientation="landscape"
            android:label="@string/title_store_product"/>
    </application>

</manifest>