<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.qcloud.suyuan">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.SYSTEM_ALERT_WINDOW" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.CHANGE_NETWORK_STATE" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE" />
    <uses-permission android:name="android.permission.READ_PHONE_STATE" />
    <uses-permission android:name="android.permission.VIBRATE" />
    <uses-permission android:name="android.permission.WAKE_LOCK" />
    <uses-permission android:name="android.permission.CALL_PHONE" />
    <uses-permission android:name="android.permission.KILL_BACKGROUND_PROCESSES" />
    <uses-permission android:name="android.permission.MOUNT_UNMOUNT_FILESYSTEMS" />

    <application
        android:name=".base.BaseApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">

        <meta-data
            android:name="targer_screen_width"
            android:value="1600" />

        <activity
            android:name=".ui.main.widget.LaunchActivity"
            android:label="@string/app_name"
            android:launchMode="singleTask"
            android:screenOrientation="landscape">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".ui.main.widget.MainActivity"
            android:label="@string/title_suyuan"
            android:launchMode="singleTop"
            android:screenOrientation="landscape" />
        <activity
            android:name=".ui.main.widget.LoginActivity"
            android:label="@string/title_login"
            android:screenOrientation="landscape" />
        <activity
            android:name=".ui.goods.widget.SellersActivity"
            android:label="@string/title_sellers"
            android:launchMode="singleTop"
            android:screenOrientation="landscape"
            android:windowSoftInputMode="stateAlwaysHidden"/>
        <activity
            android:name=".ui.goods.widget.PurchaseActivity"
            android:label="@string/title_purchase"
            android:screenOrientation="landscape"
            android:windowSoftInputMode="stateAlwaysHidden"/>
        <activity
            android:name=".ui.goods.widget.PurchaseDetailsActivity"
            android:label="@string/title_purchase"
            android:screenOrientation="landscape"
            android:windowSoftInputMode="stateAlwaysHidden"/>
        <activity
            android:name=".ui.goods.widget.ModifyPriceActivity"
            android:label="@string/title_modify_price"
            android:screenOrientation="landscape"
            android:windowSoftInputMode="stateAlwaysHidden"/>
        <activity
            android:name=".ui.order.widget.SellingWaterActivity"
            android:label="@string/title_selling_water"
            android:screenOrientation="landscape" />
        <activity
            android:windowSoftInputMode="stateAlwaysHidden"
            android:name=".ui.record.widget.CreditRecordActivity"
            android:label="@string/title_credit_record"
            android:screenOrientation="landscape" />
        <activity
            android:windowSoftInputMode="stateAlwaysHidden"
            android:name=".ui.goods.widget.ReturnedActivity"
            android:label="@string/title_return"
            android:screenOrientation="landscape" />
        <activity
            android:windowSoftInputMode="stateAlwaysHidden"
            android:name=".ui.storage.widget.OutStorageActivity"
            android:label="@string/title_out_storage"
            android:screenOrientation="landscape" />
        <activity
            android:name=".ui.store.widget.StoreProductActivity"
            android:label="@string/title_store_product"
            android:windowSoftInputMode="stateAlwaysHidden"
            android:screenOrientation="landscape" />
        <activity
            android:name=".ui.store.widget.MyProductActivity"
            android:label="@string/title_my_product"
            android:windowSoftInputMode="stateAlwaysHidden"
            android:screenOrientation="landscape" />
        <activity
            android:name=".ui.main.widget.SearchActivity"
            android:label="@string/title_search_suyuan"
            android:screenOrientation="landscape" />
        <activity
            android:name=".ui.record.widget.ReturnRecordActivity"
            android:label="@string/title_return_record"
            android:screenOrientation="landscape" />
        <activity
            android:name=".ui.record.widget.SuyuanRecordActivity"
            android:label="@string/title_suyuan_record"
            android:screenOrientation="landscape" />
        <activity
            android:name=".ui.record.widget.FormActivity"
            android:label="@string/title_form"
            android:screenOrientation="landscape" />
        <activity
            android:windowSoftInputMode="stateAlwaysHidden"
            android:name=".ui.store.widget.MySupplierActivity"
            android:label="@string/title_my_supplier"
            android:screenOrientation="landscape" />
        <activity
            android:name=".ui.store.widget.StoreInfoActivity"
            android:label="@string/title_store_info"
            android:screenOrientation="landscape" />
        <activity
            android:name=".ui.setting.widget.DeviceStateActivity"
            android:label="@string/title_device_state"
            android:screenOrientation="landscape" />
        <activity
            android:name=".ui.setting.widget.ForgetPasswordActivity"
            android:label="@string/title_forget_password"
            android:screenOrientation="landscape" />
        <activity
            android:name=".ui.goods.widget.WarnActivity"
            android:label="@string/title_warn"
            android:screenOrientation="landscape" />
        <activity
            android:name=".ui.store.widget.StockDetailsActivity"
            android:label="@string/title_stock_details"
            android:screenOrientation="landscape" />
        <!--打印机提示框-->
        <service
            android:name=".widgets.dialog.PrinterDialog"
            android:enabled="true"
            android:exported="false" />
        <activity
            android:name=".TestActivity"
            android:label="@string/title_activity_test"
            android:theme="@style/AppTheme"/>
    </application>

</manifest>