<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <com.qcloud.suyuan.widgets.toolbar.CustomToolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="@dimen/barHeight"
        app:title_text="@string/title_form" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/margin_12"
        android:padding="@dimen/margin_2">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@+id/tv_date_from"
            android:text="@string/tag_date"
            android:textSize="@dimen/typeTextSize" />

        <TextView
            android:id="@+id/tv_date_from"
            android:layout_width="@dimen/margin_40"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@+id/iv_date_picker_from"
            android:background="@color/colorLine"
            android:padding="@dimen/margin_1"
            android:text="2018-03-11"
            android:textSize="@dimen/typeTextSize" />

        <ImageView
            android:id="@+id/iv_date_picker_from"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@+id/tv_to"
            android:src="@drawable/icon_date_picker" />

        <TextView
            android:id="@+id/tv_to"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@+id/tv_date_to"
            android:padding="@dimen/margin_1"
            android:text="~"
            android:textSize="@dimen/textSize" />

        <TextView
            android:id="@+id/tv_date_to"
            android:layout_width="@dimen/margin_40"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@+id/iv_date_picker_to"
            android:background="@color/colorLine"
            android:padding="@dimen/margin_1"
            android:text="2018-03-14"
            android:textSize="@dimen/textSize" />

        <ImageView
            android:id="@+id/iv_date_picker_to"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:src="@drawable/icon_date_picker" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingLeft="@dimen/margin_20">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/layout_margin"
            android:layout_weight="1"
            android:gravity="left"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_3"
                android:gravity="center_vertical"
                android:text="@string/tag_all_income"
                android:textColor="@color/colorText"
                android:textSize="@dimen/textSize" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_3"
                android:gravity="center_vertical"
                android:text="@string/tag_cash_income"
                android:textColor="@color/colorText"
                android:textSize="@dimen/textSize" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_3"
                android:gravity="center_vertical"
                android:text="@string/tag_alipay_income"
                android:textColor="@color/colorText"
                android:textSize="@dimen/textSize" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_3"
                android:gravity="center_vertical"
                android:text="@string/tag_wechat_income"
                android:textColor="@color/colorText"
                android:textSize="@dimen/textSize" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_3"
                android:gravity="center_vertical"
                android:text="@string/tag_credit_mao"
                android:textColor="@color/colorText"
                android:textSize="@dimen/textSize" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_3"
                android:gravity="center_vertical"
                android:text="@string/tag_valid_order_mao"
                android:textColor="@color/colorText"
                android:textSize="@dimen/textSize" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_3"
                android:gravity="center_vertical"
                android:text="@string/tag_return_money"
                android:textColor="@color/colorText"
                android:textSize="@dimen/textSize" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="8.9"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_all_income"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_3"
                android:gravity="center_vertical"
                android:text="3000.00元"
                android:textColor="@color/colorText"
                android:textSize="@dimen/textSize" />

            <TextView
                android:id="@+id/tv_cash_income"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_3"
                android:gravity="center_vertical"
                android:text="3000.00元"
                android:textColor="@color/colorText"
                android:textSize="@dimen/textSize" />

            <TextView
                android:id="@+id/tv_alipay_income"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_3"
                android:gravity="center_vertical"
                android:text="3000.00元"
                android:textColor="@color/colorText"
                android:textSize="@dimen/textSize" />

            <TextView
                android:id="@+id/tv_wechat_income"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_3"
                android:gravity="center_vertical"
                android:text="3000.00元"
                android:textColor="@color/colorText"
                android:textSize="@dimen/textSize" />

            <TextView
                android:id="@+id/tv_credit_money"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_3"
                android:gravity="center_vertical"
                android:text="3000.00元"
                android:textColor="@color/colorText"
                android:textSize="@dimen/textSize" />

            <TextView
                android:id="@+id/tv_order_number"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_3"
                android:gravity="center_vertical"
                android:text="10笔"
                android:textColor="@color/colorText"
                android:textSize="@dimen/textSize" />
            <TextView
                android:id="@+id/tv_return_money"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_3"
                android:gravity="center_vertical"
                android:text="3000.00元"
                android:textColor="@color/colorText"
                android:textSize="@dimen/textSize" />
        </LinearLayout>

    </LinearLayout>
</LinearLayout>
