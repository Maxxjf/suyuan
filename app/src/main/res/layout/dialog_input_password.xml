<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:gravity="center_horizontal"
    android:background="@drawable/bg_white_radius">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/tabHeight"
        android:background="@drawable/bg_cyan_top_radius">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="@dimen/layoutMargin"
            android:paddingRight="@dimen/layoutMargin"
            android:layout_centerVertical="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:textColor="@color/white"
            android:textSize="@dimen/btnTextSize"
            android:text="@string/tag_update_password"/>

        <ImageView
            android:id="@+id/btn_close"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingRight="@dimen/layoutMargin"
            android:paddingLeft="@dimen/layoutMargin"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:src="@drawable/icon_close"/>

    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="horizontal"
        android:padding="@dimen/layoutMargin">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="right">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="@dimen/editHeight"
                android:gravity="center_vertical"
                android:textColor="@color/colorTitle"
                android:textSize="@dimen/typeTextSize"
                android:text="@string/tag_original_password"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="@dimen/editHeight"
                android:gravity="center_vertical"
                android:layout_marginTop="@dimen/modelMargin"
                android:textColor="@color/colorTitle"
                android:textSize="@dimen/typeTextSize"
                android:text="@string/tag_new_password"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="@dimen/editHeight"
                android:layout_marginTop="@dimen/modelMargin"
                android:gravity="center_vertical"
                android:textColor="@color/colorTitle"
                android:textSize="@dimen/typeTextSize"
                android:text="@string/tag_new_password_2rd"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/layout_search"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2.6"
            android:paddingLeft="@dimen/margin_2"
            android:paddingRight="@dimen/layoutMargin"
            android:orientation="vertical"
            android:gravity="center_vertical">

            <EditText
                android:id="@+id/et_password"
                android:layout_width="match_parent"
                android:layout_height="@dimen/editHeight"
                android:paddingLeft="@dimen/margin_2"
                android:paddingStart="@dimen/margin_2"
                android:completionThreshold="2"
                android:inputType="textPassword"
                android:imeOptions="actionNext"
                android:background="@drawable/frame_input"
                android:textColor="@color/colorTitle"
                android:textSize="@dimen/typeTextSize"
                android:hint="@string/et_hint_original_password" />

            <EditText
                android:id="@+id/et_new_password"
                android:layout_width="match_parent"
                android:layout_height="@dimen/editHeight"
                android:paddingLeft="@dimen/margin_2"
                android:layout_marginTop="@dimen/modelMargin"
                android:inputType="textPassword"
                android:imeOptions="actionNext"
                android:background="@drawable/frame_input"
                android:textColor="@color/colorTitle"
                android:textSize="@dimen/typeTextSize"
                android:hint="@string/et_hint_new_password"/>

            <EditText
                android:id="@+id/et_new_password_2rd"
                android:layout_width="match_parent"
                android:layout_height="@dimen/editHeight"
                android:paddingLeft="@dimen/margin_2"
                android:layout_marginTop="@dimen/modelMargin"
                android:inputType="textPassword"
                android:imeOptions="actionDone"
                android:background="@drawable/frame_input"
                android:textColor="@color/colorTitle"
                android:textSize="@dimen/typeTextSize"
                android:hint="@string/et_hint_2rd_password"/>
        </LinearLayout>

    </LinearLayout>

    <Button
        android:id="@+id/btn_confirm"
        android:layout_width="match_parent"
        android:layout_height="@dimen/largeBtnHeight"
        android:background="@drawable/btn_radius_selector"
        android:layout_marginTop="@dimen/margin_6"
        android:layout_marginLeft="@dimen/layoutMargin"
        android:layout_marginRight="@dimen/layoutMargin"
        android:layout_marginBottom="@dimen/layoutMargin"
        android:textColor="@color/white"
        android:textSize="@dimen/btnTextSize"
        android:text="@string/btn_ok"/>
</LinearLayout>