<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="0.8"
        android:orientation="vertical"
        android:padding="@dimen/margin_3">

        <com.qcloud.qclib.widget.customview.RatioImageView
            android:id="@+id/img_product"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:scaleType="centerCrop"
            android:src="@drawable/bmp_product"
            app:ratio="1.0"/>
    </LinearLayout>

    <TextView
        android:id="@+id/tv_product_name"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1.5"
        android:gravity="center"
        android:textColor="@color/colorTitle"
        android:textSize="@dimen/textSize"
        tools:text="@string/tag_product_name"/>

    <TextView
        android:id="@+id/tv_product_spec"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1.2"
        android:maxLines="3"
        android:gravity="center"
        android:textColor="@color/colorTitle"
        android:textSize="@dimen/textSize"
        tools:text="@string/tag_product_spec"/>

    <TextView
        android:id="@+id/tv_product_manufacture"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1.3"
        android:maxLines="3"
        android:gravity="center"
        android:textColor="@color/colorTitle"
        android:textSize="@dimen/textSize"
        tools:text="@string/tag_product_manufacturer"/>

    <com.qcloud.suyuan.widgets.customview.ModifyPriceView
        android:id="@+id/modify_price"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1.8"
        android:gravity="center"
        android:paddingLeft="@dimen/margin_4"
        android:paddingStart="@dimen/margin_4"
        android:paddingRight="@dimen/margin_4"
        android:paddingEnd="@dimen/margin_4"/>

    <com.qcloud.suyuan.widgets.customview.ModifyStockView
        android:id="@+id/modify_stock"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1.8"
        android:gravity="center"
        android:paddingLeft="@dimen/margin_4"
        android:paddingStart="@dimen/margin_4"
        android:paddingRight="@dimen/margin_4"
        android:paddingEnd="@dimen/margin_4"/>
</LinearLayout>
