<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:gravity="center_horizontal"
    android:background="@drawable/bg_white_radius">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/tabHeight"
        android:background="@drawable/bg_cyan_top_radius">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="@dimen/layoutMargin"
            android:paddingRight="@dimen/layoutMargin"
            android:layout_centerVertical="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:textColor="@color/white"
            android:textSize="@dimen/btnTextSize"
            android:text="@string/btn_edit_info"/>

        <ImageView
            android:id="@+id/btn_close"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingRight="@dimen/layoutMargin"
            android:paddingLeft="@dimen/layoutMargin"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:src="@drawable/icon_close"/>

    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="vertical"
        android:padding="@dimen/layoutMargin">
        <LinearLayout
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:layout_marginTop="@dimen/modelMargin"
            android:layout_width="match_parent"
            android:layout_height="@dimen/editHeight">
            <TextView
                android:text="@string/tag_store_detail_number"
                android:textColor="@color/colorText"
                android:textSize="@dimen/typeTextSize"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:id="@+id/tv_number"
                android:layout_marginLeft="@dimen/layout_margin"
                android:text="HN00037"
                android:textColor="@color/colorText"
                android:textSize="@dimen/typeTextSize"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>
        <LinearLayout
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:layout_marginTop="@dimen/modelMargin"
            android:layout_width="match_parent"
            android:layout_height="@dimen/editHeight">
            <TextView
                android:text="@string/tag_store_detail_name"
                android:textColor="@color/colorText"
                android:textSize="@dimen/typeTextSize"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:id="@+id/tv_name"
                android:layout_marginLeft="@dimen/layout_margin"
                android:text="金鼎镇农资门店"
                android:textColor="@color/colorText"
                android:textSize="@dimen/typeTextSize"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>
        <LinearLayout
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:layout_marginTop="@dimen/modelMargin"
            android:layout_width="match_parent"
            android:layout_height="@dimen/editHeight">
            <TextView
                android:text="@string/tag_store_detail_address"
                android:textColor="@color/colorText"
                android:textSize="@dimen/typeTextSize"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <EditText
                android:id="@+id/et_address"
                android:layout_marginLeft="@dimen/layout_margin"
                android:hint="@string/hint_input_store_address"
                android:textColor="@color/colorText"
                android:textSize="@dimen/typeTextSize"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>
        <LinearLayout
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:layout_marginTop="@dimen/modelMargin"
            android:layout_width="match_parent"
            android:layout_height="@dimen/editHeight">
            <TextView
                android:text="@string/tag_store_detail_shopkeeper"
                android:textColor="@color/colorText"
                android:textSize="@dimen/typeTextSize"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <EditText
                android:id="@+id/et_person"
                android:layout_marginLeft="@dimen/layout_margin"
                android:hint="@string/hint_input_store_person"
                android:textColor="@color/colorText"
                android:textSize="@dimen/typeTextSize"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>
        <LinearLayout
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:layout_marginTop="@dimen/modelMargin"
            android:layout_width="match_parent"
            android:layout_height="@dimen/editHeight">
            <TextView
                android:text="@string/tag_contact_phone"
                android:textColor="@color/colorText"
                android:textSize="@dimen/typeTextSize"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <EditText
                android:id="@+id/et_phone"
                android:layout_marginLeft="@dimen/layout_margin"
                android:hint="@string/hint_input_contact_phone"
                android:textColor="@color/colorText"
                android:textSize="@dimen/typeTextSize"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>
        <LinearLayout
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:layout_marginTop="@dimen/modelMargin"
            android:layout_width="match_parent"
            android:layout_height="@dimen/editHeight">
            <TextView
                android:text="@string/tag_area"
                android:textColor="@color/colorText"
                android:textSize="@dimen/typeTextSize"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/tv_area"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/layout_margin"
                android:text="阮江市"
                android:textColor="@color/colorText"
                android:textSize="@dimen/typeTextSize" />
        </LinearLayout>

    </LinearLayout>

    <Button
        android:id="@+id/btn_confirm"
        android:layout_width="match_parent"
        android:layout_height="@dimen/largeBtnHeight"
        android:background="@drawable/btn_radius_selector"
        android:layout_marginTop="@dimen/margin_6"
        android:layout_marginLeft="@dimen/layoutMargin"
        android:layout_marginRight="@dimen/layoutMargin"
        android:layout_marginBottom="@dimen/layoutMargin"
        android:textColor="@color/white"
        android:textSize="@dimen/btnTextSize"
        android:text="@string/btn_ok"/>
</LinearLayout>