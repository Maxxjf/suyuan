<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:gravity="center_horizontal"
    android:background="@drawable/bg_white_radius">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/tabHeight"
        android:background="@drawable/bg_cyan_top_radius">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="@dimen/layoutMargin"
            android:paddingRight="@dimen/layoutMargin"
            android:layout_centerVertical="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:textColor="@color/white"
            android:textSize="@dimen/btnTextSize"
            android:text="@string/tag_settlement_confirm"/>

        <ImageView
            android:id="@+id/btn_close"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingRight="@dimen/layoutMargin"
            android:paddingLeft="@dimen/layoutMargin"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:src="@drawable/icon_close"/>

    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical"
        android:padding="@dimen/layoutMargin">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/editHeight"
            android:paddingLeft="@dimen/layoutMargin">

            <LinearLayout
                android:id="@+id/layout_number"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:textColor="@color/colorTitle"
                    android:textSize="@dimen/typeTextSize"
                    android:text="@string/tag_goods_number"/>

                <TextView
                    android:id="@+id/tv_goods_number"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/margin_1"
                    android:layout_marginStart="@dimen/margin_1"
                    android:gravity="center_vertical"
                    android:textColor="@color/colorTitle"
                    android:textSize="@dimen/typeTextSize"
                    tools:text="10"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_toRightOf="@+id/layout_number"
                android:layout_toEndOf="@+id/layout_number"
                android:layout_marginLeft="@dimen/margin_10"
                android:layout_marginStart="@dimen/margin_10">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:textColor="@color/colorTitle"
                    android:textSize="@dimen/typeTextSize"
                    android:text="@string/tag_total_account"/>

                <TextView
                    android:id="@+id/tv_total_account"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/margin_1"
                    android:layout_marginStart="@dimen/margin_1"
                    android:gravity="center_vertical"
                    android:textColor="@color/colorTitle"
                    android:textSize="@dimen/typeTextSize"
                    tools:text="546.00"/>
            </LinearLayout>
        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/editHeight"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginLeft="@dimen/layoutMargin"
            android:layout_marginStart="@dimen/layoutMargin"
            android:layout_marginRight="@dimen/layoutMargin"
            android:layout_marginEnd="@dimen/layoutMargin"
            android:paddingLeft="@dimen/margin_2"
            android:paddingRight="@dimen/margin_2"
            android:background="@drawable/frame_gray">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/typeTextSize"
                android:textColor="@color/colorTitle"
                android:text="@string/tag_discount_price"/>

            <View
                style="@style/LineVertical"
                android:layout_margin="@dimen/margin_2"/>

            <EditText
                android:id="@+id/et_discount"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:inputType="numberDecimal"
                android:imeOptions="actionDone"
                android:background="@null"
                android:textColor="@color/colorTitle"
                android:textSize="@dimen/typeTextSize"
                android:textStyle="bold"
                android:text="0.00"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/editHeight"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:paddingLeft="@dimen/layoutMargin"
            android:paddingRight="@dimen/layoutMargin">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:textColor="@color/colorTitle"
                android:textSize="@dimen/typeTextSize"
                android:text="@string/tag_real_price"/>

            <TextView
                android:id="@+id/tv_real_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/margin_1"
                android:layout_marginStart="@dimen/margin_1"
                android:gravity="center_vertical"
                android:textColor="@color/colorPrimary"
                android:textSize="@dimen/typeTextSize"
                tools:text="546.00å…ƒ"/>
        </LinearLayout>

        <Button
            android:id="@+id/btn_credit"
            android:layout_width="match_parent"
            android:layout_height="@dimen/largeBtnHeight"
            android:background="@drawable/btn_frame_radius_selector"
            android:layout_marginTop="@dimen/margin_6"
            android:textColor="@color/colorPrimary"
            android:textSize="@dimen/btnTextSize"
            android:text="@string/btn_credit"/>

        <Button
            android:id="@+id/btn_cash"
            android:layout_width="match_parent"
            android:layout_height="@dimen/largeBtnHeight"
            android:background="@drawable/btn_radius_selector"
            android:layout_marginTop="@dimen/layoutMargin"
            android:textColor="@color/white"
            android:textSize="@dimen/btnTextSize"
            android:text="@string/btn_cash"/>

        <LinearLayout
            android:id="@+id/btn_alipay"
            android:layout_width="match_parent"
            android:layout_height="@dimen/largeBtnHeight"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_marginTop="@dimen/layoutMargin"
            android:background="@drawable/btn_blue_radius_selector">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/icon_alipay"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/drawPadding"
                android:textColor="@color/white"
                android:textSize="@dimen/btnTextSize"
                android:text="@string/btn_alipay"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/btn_wechat"
            android:layout_width="match_parent"
            android:layout_height="@dimen/largeBtnHeight"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_marginTop="@dimen/layoutMargin"
            android:background="@drawable/btn_orange_radius_selector">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/icon_wechat"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/drawPadding"
                android:textColor="@color/white"
                android:textSize="@dimen/btnTextSize"
                android:text="@string/btn_wechat"/>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>