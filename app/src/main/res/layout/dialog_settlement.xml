<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:gravity="center_horizontal"
    android:background="@drawable/bg_white_radius">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/tabHeight"
        android:background="@drawable/bg_cyan_top_radius">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="@dimen/layoutMargin"
            android:paddingRight="@dimen/layoutMargin"
            android:layout_centerVertical="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:textColor="@color/white"
            android:textSize="@dimen/btnTextSize"
            android:text="@string/tag_settlement_confirm"/>

        <ImageView
            android:id="@+id/btn_close"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingRight="@dimen/layoutMargin"
            android:paddingLeft="@dimen/layoutMargin"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:src="@drawable/icon_close"/>

    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical"
        android:padding="@dimen/layoutMargin">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:gravity="right">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/editHeight"
                    android:gravity="center_vertical"
                    android:textColor="@color/colorTitle"
                    android:textSize="@dimen/textSize"
                    android:text="@string/tag_dialog_goods_num"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/editHeight"
                    android:layout_marginTop="@dimen/modelMargin"
                    android:gravity="center_vertical"
                    android:textColor="@color/colorTitle"
                    android:textSize="@dimen/textSize"
                    android:text="@string/tag_dialog_goods_account"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/editHeight"
                    android:layout_marginTop="@dimen/modelMargin"
                    android:gravity="center_vertical"
                    android:textColor="@color/colorTitle"
                    android:textSize="@dimen/textSize"
                    android:text="@string/tag_real_price"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:orientation="vertical"
                android:layout_marginLeft="@dimen/margin_1"
                android:layout_marginStart="@dimen/margin_1">

                <TextView
                    android:id="@+id/tv_goods_number"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/editHeight"
                    android:gravity="center_vertical"
                    android:textColor="@color/colorTitle"
                    android:textSize="@dimen/typeTextSize"
                    tools:text="10"/>

                <TextView
                    android:id="@+id/tv_total_account"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/editHeight"
                    android:layout_marginTop="@dimen/modelMargin"
                    android:gravity="center_vertical"
                    android:textColor="@color/colorTitle"
                    android:textSize="@dimen/typeTextSize"
                    tools:text="546.00"/>

                <EditText
                    android:id="@+id/et_real_price"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/editHeight"
                    android:layout_marginTop="@dimen/layoutMargin"
                    android:paddingLeft="@dimen/margin_2"
                    android:paddingStart="@dimen/margin_2"
                    android:digits="0123456789."
                    android:imeOptions="actionDone"
                    android:background="@drawable/frame_gray"
                    android:textColor="@color/colorTitle"
                    android:textSize="@dimen/typeTextSize"
                    android:textStyle="bold"
                    android:textColorHint="@color/colorHint"
                    android:hint="0.00"/>
            </LinearLayout>

        </LinearLayout>

        <Button
            android:id="@+id/btn_cash"
            android:layout_width="match_parent"
            android:layout_height="@dimen/largeBtnHeight"
            android:background="@drawable/btn_radius_selector"
            android:layout_marginTop="@dimen/layoutMargin"
            android:textColor="@color/white"
            android:textSize="@dimen/btnTextSize"
            android:text="@string/btn_cash"/>

        <LinearLayout
            android:id="@+id/btn_alipay"
            android:layout_width="match_parent"
            android:layout_height="@dimen/largeBtnHeight"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_marginTop="@dimen/layoutMargin"
            android:background="@drawable/btn_blue_radius_selector">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/icon_alipay"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/drawPadding"
                android:textColor="@color/white"
                android:textSize="@dimen/btnTextSize"
                android:text="@string/btn_alipay"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/btn_wechat"
            android:layout_width="match_parent"
            android:layout_height="@dimen/largeBtnHeight"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_marginTop="@dimen/layoutMargin"
            android:background="@drawable/btn_wechat_radius_selector">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/icon_wechat"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/drawPadding"
                android:textColor="@color/white"
                android:textSize="@dimen/btnTextSize"
                android:text="@string/btn_wechat"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:textSize="@dimen/btnTextSize"
                android:text="ä¿¡"
                android:visibility="invisible"/>
        </LinearLayout>

        <Button
            android:id="@+id/btn_credit"
            android:layout_width="match_parent"
            android:layout_height="@dimen/largeBtnHeight"
            android:background="@drawable/btn_frame_radius_selector"
            android:layout_marginTop="@dimen/margin_6"
            android:textColor="@color/colorPrimary"
            android:textSize="@dimen/btnTextSize"
            android:text="@string/btn_credit"/>
    </LinearLayout>
</LinearLayout>