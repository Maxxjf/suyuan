<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:cardElevation="0dp"
    app:cardCornerRadius="1dp"
    tools:context=".ui.goods.widget.PurchaseDetailsActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/barHeight">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_marginLeft="@dimen/layoutMargin"
                android:layout_marginStart="@dimen/layoutMargin"
                android:textColor="@color/colorTitle"
                android:textSize="@dimen/titleTextSize"
                android:text="@string/tag_product_info"/>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="@dimen/editHeight"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"
                android:layout_marginRight="@dimen/margin_2"
                android:layout_marginEnd="@dimen/margin_2"
                android:background="@drawable/frame_gray">

                <ImageView
                    android:id="@+id/btn_search"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/margin_1"
                    android:layout_marginStart="@dimen/margin_1"
                    android:layout_marginRight="@dimen/margin_1"
                    android:layout_marginEnd="@dimen/margin_1"
                    android:src="@drawable/icon_search"
                    android:background="?attr/selectableItemBackgroundBorderless"/>

                <View
                    style="@style/LineVertical"
                    android:layout_margin="@dimen/margin_1"/>

                <EditText
                    android:id="@+id/et_search"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:minWidth="@dimen/margin_40"
                    android:background="@null"
                    android:layout_marginLeft="@dimen/margin_1"
                    android:layout_marginStart="@dimen/margin_1"
                    android:gravity="center_vertical"
                    android:inputType="number"
                    android:imeOptions="actionSearch"
                    android:textColor="@color/colorTitle"
                    android:textSize="@dimen/textSize"
                    android:textColorHint="@color/colorGray"
                    android:hint="@string/hint_input_product_code_and_name"/>

            </LinearLayout>
        </RelativeLayout>

        <View
            style="@style/LineHorizontal"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:gravity="center_horizontal">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:padding="@dimen/layoutMargin"
                android:orientation="vertical">

                <com.qcloud.qclib.widget.customview.RatioImageView
                    android:id="@+id/img_product"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:scaleType="centerCrop"
                    android:src="@drawable/bmp_product"
                    app:ratio="1.0"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:padding="@dimen/layoutMargin"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="top"
                    android:layout_marginTop="@dimen/modelMargin">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/colorTitle"
                        android:textSize="@dimen/textSize"
                        android:text="@string/tag_product_detail_name"/>

                    <TextView
                        android:id="@+id/tv_product_name"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/drawPadding"
                        android:layout_marginStart="@dimen/drawPadding"
                        android:lineSpacingExtra="@dimen/drawPadding"
                        android:textColor="@color/colorTitle"
                        android:textSize="@dimen/textSize"
                        tools:text="安环曹素环250克/升+金何玲10%(水剂+5%安环曹素昂250克)安环曹素环250克/升+金何玲10%(水剂+5%安环曹素昂250克)"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="top"
                    android:layout_marginTop="@dimen/modelMargin">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/colorTitle"
                        android:textSize="@dimen/textSize"
                        android:text="@string/tag_product_detail_spec"/>

                    <TextView
                        android:id="@+id/tv_product_spec"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/drawPadding"
                        android:layout_marginStart="@dimen/drawPadding"
                        android:lineSpacingExtra="@dimen/drawPadding"
                        android:textColor="@color/colorTitle"
                        android:textSize="@dimen/textSize"
                        tools:text="@string/tag_product_detail_spec"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="top"
                    android:layout_marginTop="@dimen/modelMargin">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/colorTitle"
                        android:textSize="@dimen/textSize"
                        android:text="@string/tag_product_detail_classify"/>

                    <TextView
                        android:id="@+id/tv_product_classify"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/drawPadding"
                        android:layout_marginStart="@dimen/drawPadding"
                        android:lineSpacingExtra="@dimen/drawPadding"
                        android:textColor="@color/colorTitle"
                        android:textSize="@dimen/textSize"
                        tools:text="@string/tag_product_detail_classify"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="top"
                    android:layout_marginTop="@dimen/modelMargin">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/colorTitle"
                        android:textSize="@dimen/textSize"
                        android:text="@string/tag_product_detail_unit"/>

                    <TextView
                        android:id="@+id/tv_product_unit"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/drawPadding"
                        android:layout_marginStart="@dimen/drawPadding"
                        android:lineSpacingExtra="@dimen/drawPadding"
                        android:textColor="@color/colorTitle"
                        android:textSize="@dimen/textSize"
                        tools:text="@string/tag_product_detail_unit"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="top"
                    android:layout_marginTop="@dimen/modelMargin">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/colorTitle"
                        android:textSize="@dimen/textSize"
                        android:text="@string/tag_product_detail_manufacturer"/>

                    <TextView
                        android:id="@+id/tv_product_manufacturer"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/drawPadding"
                        android:layout_marginStart="@dimen/drawPadding"
                        android:lineSpacingExtra="@dimen/drawPadding"
                        android:textColor="@color/colorTitle"
                        android:textSize="@dimen/textSize"
                        tools:text="@string/tag_product_detail_manufacturer"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="top"
                    android:layout_marginTop="@dimen/modelMargin">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/colorTitle"
                        android:textSize="@dimen/textSize"
                        android:text="@string/tag_product_detail_curr_stock"/>

                    <TextView
                        android:id="@+id/tv_product_curr_stock"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/drawPadding"
                        android:layout_marginStart="@dimen/drawPadding"
                        android:lineSpacingExtra="@dimen/drawPadding"
                        android:textColor="@color/colorTitle"
                        android:textSize="@dimen/textSize"
                        tools:text="@string/tag_product_detail_curr_stock"/>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</android.support.v7.widget.CardView>


