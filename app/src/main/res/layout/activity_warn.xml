<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ui.goods.widget.WarnActivity">

    <com.qcloud.suyuan.widgets.toolbar.CustomToolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="@dimen/barHeight"
        app:title_text="@string/title_warn"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/tabHeight"
        android:layout_marginTop="@dimen/margin_2">

        <com.shizhefei.view.indicator.FixedIndicatorView
            android:id="@+id/view_page_indicator"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:minWidth="@dimen/margin_50"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginLeft="@dimen/margin_3"
            android:layout_marginStart="@dimen/margin_3"/>

        <TextView
            android:id="@+id/btn_edit_stock"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:clickable="true"
            android:focusable="true"
            android:gravity="center"
            android:background="?attr/selectableItemBackground"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_marginRight="@dimen/layoutMargin"
            android:layout_marginEnd="@dimen/layoutMargin"
            android:drawableLeft="@drawable/icon_edit_stock_warn"
            android:drawableStart="@drawable/icon_edit_stock_warn"
            android:drawablePadding="@dimen/drawPadding"
            android:textColor="@color/colorPrimary"
            android:textSize="@dimen/typeTextSize"
            android:text="@string/btn_edit_stock_warn"/>
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/underLine"
        android:background="@color/colorPrimaryDark"/>

    <android.support.v4.view.ViewPager
        android:id="@+id/view_pager"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>

</LinearLayout>
