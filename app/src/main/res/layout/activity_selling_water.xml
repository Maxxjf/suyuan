<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical"
    tools:context=".ui.order.widget.SellingWaterActivity">

    <com.qcloud.suyuan.widgets.toolbar.CustomToolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="@dimen/barHeight"
        app:is_back="true"
        app:is_main="false"
        app:is_right="false"
        app:is_title="true"
        app:title_text="@string/title_selling_water" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/toolbar"
        android:orientation="horizontal">

        <LinearLayout
            android:id="@+id/layout_cart"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="7"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/margin_11"
                android:padding="@dimen/margin_2">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:text="@string/tag_selling_water_list"
                    android:textSize="@dimen/titleTextSize" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/editHeight"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_centerVertical="true"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentEnd="true"
                    android:layout_marginRight="@dimen/margin_2"
                    android:layout_marginEnd="@dimen/margin_2"
                    android:background="@drawable/frame_gray">

                    <ImageView
                        android:id="@+id/btn_search"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/margin_1"
                        android:layout_marginStart="@dimen/margin_1"
                        android:layout_marginRight="@dimen/margin_1"
                        android:layout_marginEnd="@dimen/margin_1"
                        android:src="@drawable/icon_search"
                        android:background="?attr/selectableItemBackgroundBorderless"/>

                    <View
                        style="@style/LineVertical"
                        android:layout_margin="@dimen/margin_1"/>

                    <EditText

                        android:digits="0123456789qwertyuioplkjhgfdsazxcvbnmQWERTYUIOPASDFGHJKLZXCVBNM"
                        android:id="@+id/et_search"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:minWidth="@dimen/margin_40"
                        android:background="@null"
                        android:layout_marginLeft="@dimen/margin_1"
                        android:layout_marginStart="@dimen/margin_1"
                        android:gravity="center_vertical"
                        android:inputType="text"
                        android:imeOptions="actionSearch"
                        android:textColor="@color/colorTitle"
                        android:textSize="@dimen/textSize"
                        android:textColorHint="@color/colorGray"
                        android:hint="@string/hint_input_water_number"/>

                </LinearLayout>
            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/underLine"
                android:background="@color/colorLine" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/margin_6"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="@string/tag_goods_order"
                    android:textColor="@color/colorText"
                    android:textSize="@dimen/typeTextSize" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="@string/tag_goods_name"
                    android:textColor="@color/colorText"
                    android:textSize="@dimen/typeTextSize" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="@string/tag_goods_rule"
                    android:textColor="@color/colorText"
                    android:textSize="@dimen/typeTextSize" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="@string/tag_goods_data"
                    android:textColor="@color/colorText"
                    android:textSize="@dimen/typeTextSize" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="@string/tag_goods_control"
                    android:textColor="@color/colorText"
                    android:textSize="@dimen/typeTextSize" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <com.qcloud.qclib.refresh.pullrefresh.PullRecyclerView
                    android:id="@+id/rv_sale_list"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:paddingLeft="@dimen/margin_2" />

            </LinearLayout>


        </LinearLayout>

        <View
            android:layout_width="@dimen/margin_2"
            android:layout_height="match_parent"
            android:background="@color/colorLine" />

        <LinearLayout
            android:id="@+id/layout_idcard"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="5"
            android:orientation="vertical"
            android:paddingLeft="@dimen/margin_4"
            android:paddingRight="@dimen/margin_4">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/margin_11"
                android:padding="@dimen/margin_2">

                <TextView

                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:text="@string/tag_receipt_info"
                    android:textSize="@dimen/titleTextSize" />

            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/underLine"
                android:background="@color/colorLine" />

            <LinearLayout
                android:gravity="center_vertical"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="@dimen/repict_info_height"
                android:background="@drawable/bg_receipt"
                android:padding="@dimen/margin_2">
                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:id="@+id/tag_serial_number"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/tag_serial_number"
                        android:textSize="@dimen/miniTextSize" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="LSH00000001"
                        android:textSize="@dimen/miniTextSize" />
                    <TextView
                        android:layout_marginLeft="@dimen/margin_2"
                        android:id="@+id/tag_time"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/tag_time"
                        android:textSize="@dimen/miniTextSize" />

                    <TextView
                        android:id="@+id/tv_time"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="2018-03-10 00:00"
                        android:textSize="@dimen/miniTextSize" />
                    <TextView
                        android:layout_marginLeft="@dimen/margin_2"
                        android:text="冰山"
                        android:textSize="@dimen/miniTextSize"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                </LinearLayout>
                <LinearLayout
                    android:layout_marginTop="@dimen/margin_2"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/tag_buyer"
                        android:textSize="@dimen/miniTextSize" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="樱木"
                        android:textSize="@dimen/miniTextSize" />
                    <TextView
                        android:layout_marginLeft="@dimen/margin_3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="440402199999999999"
                        android:textSize="@dimen/miniTextSize" />
                    <TextView
                        android:layout_marginLeft="@dimen/margin_2"
                        android:text="15015912345"
                        android:textSize="@dimen/miniTextSize"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/margin_6"
                android:background="@color/colorModelBgF9"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="@string/tag_goods_name"
                    android:textColor="@color/colorText"
                    android:textSize="@dimen/typeTextSize" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="@string/tag_number"
                    android:textColor="@color/colorText"
                    android:textSize="@dimen/typeTextSize" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="@string/tag_goods_rule"
                    android:textColor="@color/colorText"
                    android:textSize="@dimen/typeTextSize" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="@string/tag_price"
                    android:textColor="@color/colorText"
                    android:textSize="@dimen/typeTextSize" />
            </LinearLayout>

            <com.qcloud.qclib.refresh.pullrefresh.PullRecyclerView
                android:id="@+id/rv_sale_info_list"
                android:layout_width="match_parent"
                android:layout_height="@dimen/margin_50" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginBottom="@dimen/margin_4"
                android:orientation="vertical"
                android:padding="@dimen/margin_2">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/tag_cash_pay"
                        android:textColor="@color/colorText"
                        android:textSize="@dimen/textSize" />

                    <TextView
                        android:layout_marginLeft="@dimen/margin_50"
                        android:id="@+id/tv_tag_add_all"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/tag_add_all"
                        android:textColor="@color/colorText"
                        android:textSize="@dimen/textSize" />
                    <TextView
                        android:layout_toRightOf="@+id/tv_tag_add_all"
                        android:id="@+id/tv_all_money"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="0.00"
                        android:textColor="@color/colorText"
                        android:textSize="@dimen/textSize" />


                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/margin_2">

                    <TextView
                        android:id="@+id/tv_return_money"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/tag_return_money"
                        android:textColor="@color/colorText"
                        android:textSize="@dimen/textSize" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/margin_1"
                        android:layout_toRightOf="@+id/tv_return_money"
                        android:text="5.00"
                        android:textColor="@color/colorText"
                        android:textSize="@dimen/textSize" />
                    <TextView
                        android:id="@+id/tv_tag_real_pay"
                        android:layout_marginLeft="@dimen/margin_50"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/tag_money"
                        android:textColor="@color/colorText"
                        android:textSize="@dimen/textSize" />
                    <TextView
                        android:layout_toRightOf="@+id/tv_tag_real_pay"
                        android:id="@+id/tv_real_pay"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="0.00"
                        android:textColor="@color/colorText"
                        android:textSize="@dimen/textSize" />

                </RelativeLayout>


            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

</LinearLayout>
