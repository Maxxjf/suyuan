<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical"
    tools:context=".ui.store.widget.MySupplierActivity">

    <com.qcloud.suyuan.widgets.toolbar.CustomToolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="@dimen/barHeight"
        app:is_back="true"
        app:is_main="false"
        app:is_right="false"
        app:is_title="true"
        app:title_text="@string/title_my_supplier" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/toolbar"
        android:orientation="horizontal">


        <LinearLayout
            android:id="@+id/layout_idcard"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="5"
            android:orientation="vertical"
            android:paddingLeft="@dimen/margin_4"
            android:paddingRight="@dimen/margin_4">

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="@dimen/margin_11"
                android:padding="@dimen/margin_2">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/editHeight"
                    android:layout_centerVertical="true"
                    android:background="@drawable/frame_gray"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/btn_search"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="@dimen/margin_1"
                        android:layout_marginLeft="@dimen/margin_1"
                        android:layout_marginRight="@dimen/margin_1"
                        android:layout_marginStart="@dimen/margin_1"
                        android:background="?attr/selectableItemBackgroundBorderless"
                        android:src="@drawable/icon_search" />

                    <View
                        style="@style/LineVertical"
                        android:layout_margin="@dimen/margin_1" />

                    <EditText
                        android:id="@+id/et_search"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_alignBaseline="@+id/textView"
                        android:layout_alignBottom="@+id/textView"
                        android:layout_alignParentEnd="true"
                        android:layout_alignParentRight="true"
                        android:layout_marginEnd="99dp"
                        android:layout_marginRight="99dp"
                        android:background="@null"
                        android:gravity="center_vertical"
                        android:hint="@string/hint_input_name_supplier"
                        android:imeOptions="actionSearch"
                        android:inputType="text"
                        android:textColor="@color/colorTitle"
                        android:textColorHint="@color/colorGray"
                        android:textSize="@dimen/textSize" />
                </LinearLayout>
                <Button
                    android:textSize="@dimen/btnTextSize"
                    android:background="@drawable/btn_green_radius_selector"
                    android:layout_centerVertical="true"
                    android:layout_alignParentRight="true"
                    android:text="@string/btn_add_supplier"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/underLine"
                android:background="@color/colorLine" />



            <com.qcloud.qclib.refresh.swiperefresh.SwipeRecyclerView
                android:id="@+id/rv_credit_list"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />

        </LinearLayout>

        <View
            android:layout_width="@dimen/margin_2"
            android:layout_height="match_parent"
            android:background="@color/colorLine" />

        <LinearLayout
            android:id="@+id/layout_cart"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="7"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/margin_11"
                android:padding="@dimen/margin_2">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:text="@string/tag_supplier_details"
                    android:textSize="@dimen/titleTextSize"
                    android:id="@+id/textView" />
                <TextView
                    android:textColor="@color/colorPrimary"
                    android:drawableLeft="@drawable/selector_btn_edit"
                    android:layout_alignParentRight="true"
                    android:textSize="@dimen/btnTextSize"
                    android:text="@string/edit"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />


            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/underLine"
                android:background="@color/colorLine" />


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <FrameLayout
                    android:id="@+id/fragment_container"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:paddingLeft="@dimen/margin_2" />

            </LinearLayout>


        </LinearLayout>
    </LinearLayout>

</LinearLayout>

