<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:layout_marginTop="@dimen/modelMargin"
    android:paddingBottom="@dimen/layoutMargin">

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/editHeight"
            android:orientation="horizontal"
            android:gravity="center_vertical|right"
            tools:ignore="RtlHardcoded">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="top"
                android:textColor="@color/colorRed"
                android:textSize="@dimen/smallTextSize"
                android:text="@string/tag_required"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:textColor="@color/colorTitle"
                android:textSize="@dimen/smallTextSize"
                android:text="@string/tag_registration_code_valid"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/editHeight"
            android:orientation="horizontal"
            android:gravity="center_vertical|right"
            android:layout_marginTop="@dimen/modelMargin"
            tools:ignore="RtlHardcoded">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="top"
                android:textColor="@color/colorRed"
                android:textSize="@dimen/smallTextSize"
                android:text="@string/tag_required"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:textColor="@color/colorTitle"
                android:textSize="@dimen/smallTextSize"
                android:text="@string/tag_production_license_code"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/editHeight"
            android:orientation="horizontal"
            android:gravity="center_vertical|right"
            android:layout_marginTop="@dimen/modelMargin"
            tools:ignore="RtlHardcoded">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="top"
                android:textColor="@color/colorRed"
                android:textSize="@dimen/smallTextSize"
                android:text="@string/tag_required"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:textColor="@color/colorTitle"
                android:textSize="@dimen/smallTextSize"
                android:text="@string/tag_product_standard_code"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/editHeight"
            android:orientation="horizontal"
            android:gravity="center_vertical|right"
            android:layout_marginTop="@dimen/modelMargin"
            tools:ignore="RtlHardcoded">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:textColor="@color/colorTitle"
                android:textSize="@dimen/smallTextSize"
                android:text="@string/tag_product_introduce"/>
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="2.5"
        android:orientation="vertical"
        android:layout_marginLeft="@dimen/margin_2"
        android:layout_marginStart="@dimen/margin_2">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/editHeight"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_registration_start"
                android:layout_width="0dp"
                android:layout_height="@dimen/editHeight"
                android:layout_weight="1"
                android:background="@drawable/btn_frame_selector"
                android:gravity="center_vertical"
                android:paddingLeft="@dimen/margin_2"
                android:paddingStart="@dimen/margin_2"
                android:paddingRight="@dimen/margin_2"
                android:paddingEnd="@dimen/margin_2"
                android:textColor="@color/colorTitle"
                android:textSize="@dimen/textSize"
                tools:text="2018-3-14"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="@dimen/editHeight"
                android:gravity="center_vertical"
                android:paddingLeft="@dimen/margin_4"
                android:paddingStart="@dimen/margin_4"
                android:paddingRight="@dimen/margin_4"
                android:paddingEnd="@dimen/margin_4"
                android:textColor="@color/colorTitle"
                android:textSize="@dimen/textSize"
                android:textStyle="bold"
                android:text="-"/>

            <TextView
                android:id="@+id/tv_registration_end"
                android:layout_width="0dp"
                android:layout_height="@dimen/editHeight"
                android:layout_weight="1"
                android:background="@drawable/btn_frame_selector"
                android:gravity="center_vertical"
                android:paddingLeft="@dimen/margin_2"
                android:paddingStart="@dimen/margin_2"
                android:paddingRight="@dimen/margin_2"
                android:paddingEnd="@dimen/margin_2"
                android:textColor="@color/colorTitle"
                android:textSize="@dimen/textSize"
                tools:text="2020-3-14"/>
        </LinearLayout>

        <TextView
            android:id="@+id/et_production_license"
            android:layout_width="match_parent"
            android:layout_height="@dimen/editHeight"
            android:layout_marginTop="@dimen/modelMargin"
            android:background="@drawable/frame_gray"
            android:gravity="center_vertical"
            android:paddingLeft="@dimen/margin_2"
            android:paddingStart="@dimen/margin_2"
            android:paddingRight="@dimen/margin_2"
            android:paddingEnd="@dimen/margin_2"
            android:textColor="@color/colorTitle"
            android:textSize="@dimen/textSize"
            android:hint="@string/hint_input_production_license"/>

        <TextView
            android:id="@+id/et_product_standard"
            android:layout_width="match_parent"
            android:layout_height="@dimen/editHeight"
            android:layout_marginTop="@dimen/modelMargin"
            android:background="@drawable/frame_gray"
            android:gravity="center_vertical"
            android:paddingLeft="@dimen/margin_2"
            android:paddingStart="@dimen/margin_2"
            android:paddingRight="@dimen/margin_2"
            android:paddingEnd="@dimen/margin_2"
            android:textColor="@color/colorTitle"
            android:textSize="@dimen/textSize"
            android:hint="@string/hint_input_product_standard"/>

        <TextView
            android:id="@+id/et_product_introduce"
            android:layout_width="match_parent"
            android:layout_height="@dimen/margin_50"
            android:layout_marginTop="@dimen/modelMargin"
            android:background="@drawable/frame_gray"
            android:gravity="top"
            android:padding="@dimen/margin_2"
            android:textColor="@color/colorTitle"
            android:textSize="@dimen/textSize"
            android:hint="@string/hint_input_product_introduce"/>
    </LinearLayout>
</LinearLayout>
