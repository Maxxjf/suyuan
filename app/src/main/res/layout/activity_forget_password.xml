<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_login"
    tools:context=".ui.main.widget.LoginActivity">

    <RelativeLayout
        android:layout_width="@dimen/login_width"
        android:layout_height="@dimen/login_height"
        android:layout_centerInParent="true"
        android:background="@drawable/radius_hand_transoarent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="@dimen/margin_2"
            android:background="@drawable/bg_white_bottom_radius"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:orientation="vertical"
            android:paddingLeft="@dimen/margin_6"
            android:paddingRight="@dimen/margin_6">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_7"
                android:gravity="center_horizontal"
                android:text="@string/tv_system_name"
                android:textColor="@color/colorGreen"
                android:textSize="@dimen/bigTitleSize" />

            <TextView
                android:id="@+id/et_phone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="@dimen/margin_4"
                android:drawableLeft="@drawable/icon_phone"
                android:gravity="center_vertical"
                android:hint="@string/et_hint_phone"
                android:imeOptions="actionNext"
                android:inputType="text"
                android:textColor="@color/colorText"
                android:textColorHint="@color/colorHint"
                android:textSize="@dimen/textSize" />
            <View
                android:background="@color/colorLine"
                android:layout_width="match_parent"
                android:layout_height="@dimen/underLine"/>
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/et_code"
                    android:layout_width="@dimen/margin_40"
                    android:layout_height="wrap_content"
                    android:paddingTop="@dimen/margin_4"
                    android:drawableLeft="@drawable/icon_code"
                    android:gravity="center_vertical"
                    android:hint="@string/et_hint_code"
                    android:imeOptions="actionNext"
                    android:inputType="text"
                    android:textColor="@color/colorText"
                    android:textColorHint="@color/colorHint"
                    android:textSize="@dimen/textSize" />
                <View
                    android:layout_gravity="center"
                    android:background="@color/colorLine"
                    android:layout_width="@dimen/underLine"
                    android:layout_height="@dimen/margin_6"/>
                <TextView
                    android:id="@+id/btn_get_code"
                    android:textColor="@color/colorPrimary"
                    android:paddingTop="@dimen/margin_4"
                    android:text="@string/tag_get_code"
                    android:gravity="center"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
            </LinearLayout>
            <View
                android:background="@color/colorLine"
                android:layout_width="match_parent"
                android:layout_height="@dimen/underLine"/>
            <TextView
                android:id="@+id/et_password"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="@dimen/margin_4"
                android:drawableLeft="@drawable/icon_password"
                android:gravity="center_vertical"
                android:hint="@string/et_hint_new_password"
                android:imeOptions="actionNext"
                android:inputType="numberPassword"
                android:textColor="@color/colorText"
                android:textColorHint="@color/colorHint"
                android:textSize="@dimen/textSize" />
            <View
                android:background="@color/colorLine"
                android:layout_width="match_parent"
                android:layout_height="@dimen/underLine"/>
            <TextView
                android:id="@+id/et_password_confrim"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="@dimen/margin_4"
                android:drawableLeft="@drawable/icon_password_confrim"
                android:gravity="center_vertical"
                android:hint="@string/et_hint_2rd_password"
                android:imeOptions="actionDone"
                android:inputType="numberPassword"
                android:textColor="@color/colorText"
                android:textColorHint="@color/colorHint"
                android:textSize="@dimen/textSize" />
            <View
                android:background="@color/colorLine"
                android:layout_width="match_parent"
                android:layout_height="@dimen/underLine"/>
            <TextView
                android:id="@+id/tv_error"
                android:paddingTop="@dimen/margin_2"
                android:textColor="@color/colorRed"
                android:text="您输入的手机号码错误，请输入正确的手机号码"
                android:gravity="center_horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
            <Button
                android:id="@+id/btn_updata_password"
                android:layout_width="@dimen/login_btn_width"
                android:layout_height="@dimen/login_btn_height"
                android:layout_marginTop="@dimen/margin_2"
                android:background="@drawable/btn_radius_selector"
                android:text="@string/btn_updata_password"
                android:textSize="@dimen/btnTextSize" />
        </LinearLayout>
    </RelativeLayout>
</RelativeLayout>