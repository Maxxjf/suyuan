<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_login"
    tools:context=".ui.main.widget.LoginActivity">

    <RelativeLayout
        android:layout_width="@dimen/login_width"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:background="@drawable/radius_hand_transoarent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/margin_2"
            android:background="@drawable/bg_white_bottom_radius"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:orientation="vertical"
            android:paddingLeft="@dimen/margin_6"
            android:paddingRight="@dimen/margin_6">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_7"
                android:gravity="center_horizontal"
                android:text="@string/tv_system_name"
                android:textColor="@color/colorGreen"
                android:textSize="@dimen/largeTextSize" />

            <TextView
                android:id="@+id/et_account"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_7"
                android:drawableLeft="@drawable/icon_account"
                android:drawableStart="@drawable/icon_account"
                android:gravity="center_vertical"
                android:hint="@string/et_hint_account"
                android:textColor="@color/colorText"
                android:textColorHint="@color/colorHint"
                android:textSize="@dimen/textSize" />

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/underLine"
                android:background="@color/colorDivider" />

            <TextView
                android:id="@+id/et_password"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_4"
                android:drawableLeft="@drawable/icon_password"
                android:drawableStart="@drawable/icon_password"
                android:gravity="center_vertical"
                android:hint="@string/et_hint_password"
                android:inputType="textPassword"
                android:textColor="@color/colorText"
                android:textColorHint="@color/colorHint"
                android:textSize="@dimen/textSize" />

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/underLine"
                android:background="@color/colorDivider" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_2">

                <CheckBox
                    android:id="@+id/cb_rember_password"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:checked="false"
                    android:scaleX="1.5"
                    android:scaleY="1.5"
                    android:theme="@style/cb_password" />

                <TextView
                    android:paddingLeft="@dimen/margin_1"
                    android:layout_toRightOf="@+id/cb_rember_password"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/cb_remember_password"
                    android:textSize="@dimen/textSize" />

                <TextView
                    android:id="@+id/btn_forget_password"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:text="@string/btn_forrget_login"
                    android:textColor="@drawable/selector_green_click"
                    android:textSize="@dimen/textSize"
                    android:visibility="gone" />
            </RelativeLayout>

            <Button
                android:id="@+id/btn_login"
                android:layout_width="match_parent"
                android:layout_height="@dimen/btnHeight"
                android:layout_marginBottom="@dimen/margin_4"
                android:layout_marginTop="@dimen/margin_6"
                android:background="@drawable/btn_radius_selector"
                android:text="@string/btn_login"
                android:textSize="@dimen/btnTextSize" />
        </LinearLayout>
    </RelativeLayout>
</RelativeLayout>