<resources>

    <!-- Android 5.0以下主题风格. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <!--设置appBar的背景色-->
        <item name="colorPrimary">@color/colorPrimary</item>
        <!--设置状态栏的颜色-->
        <item name="colorPrimaryDark">@color/colorPrimary</item>
        <!--表示控件激活时候的色调，与之相同作用的一个属性：android:colorAccent。作用也是一样的。-->
        <item name="colorControlActivated">@color/colorPrimaryDark</item>
        <!--设置appBar上字体的颜色-->
        <item name="android:textColorPrimary">@color/white</item>
    </style>

    <!--输入消息弹窗-->
    <style name="InputDialog">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowIsTranslucent">false</item>
        <item name="android:windowFullscreen">false</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:background">@color/transparent</item>
        <item name="android:windowBackground">@color/transparent</item>
        <item name="android:backgroundDimEnabled">true</item>
        <item name="colorControlNormal">@color/colorTitle</item>
        <!--<item name="android:textColorHint">@color/colorHint</item>-->
        <item name="colorControlActivated">@color/colorSubTitle</item>
    </style>

    <!-- 水平分界线白色底 -->
    <style name="LineHorizontal">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/line_height</item>
        <item name="android:background">@color/colorLine</item>
    </style>

    <!-- 垂直分界线白色底 -->
    <style name="LineVertical">
        <item name="android:layout_width">@dimen/line_height</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:background">@color/colorLine</item>
    </style>

    <style name="cb_password">
        <!--波纹的颜色-->
        <item name="android:colorControlHighlight">@color/colorPrimary</item>
        <!--选中的颜色-->
        <item name="colorAccent">@color/colorPrimary</item>
    </style>
</resources>
